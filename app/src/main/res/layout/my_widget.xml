<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/widgetDaysLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#448AFF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sundayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Su"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/mondayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="M"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tuesdayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Tu"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/wednesdayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="W"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/thursdayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Th"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/fridayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="F"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/saturdayTVWG"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Sa"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>