<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#202020">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Medication Reminder"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@color/white"
                android:layout_marginRight="10dp"
                android:onClick="openSettings"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="7dp"
               android:padding="5dp"
               android:background="@drawable/cv_shape"
               android:orientation="horizontal"
               android:layout_marginTop="10dp">


               <androidx.cardview.widget.CardView
                   android:id="@+id/sundayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/sundayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="Su"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/mondayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/mondayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="M"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/tuesdayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/tuesdayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="Tu"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/wednesdayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/wednesdayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="W"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/thursdayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/thursdayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="Th"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/fridayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">


                   <TextView
                       android:id="@+id/fridayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="F"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light" />
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/saturdayCV"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   app:cardCornerRadius="20dp"
                   android:backgroundTint="#448AFF"
                   android:layout_margin="2dp">

                   <TextView
                       android:id="@+id/saturdayTV"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center"
                       android:textSize="20sp"
                       android:textAlignment="center"
                       android:gravity="center"
                       android:text="Sa"
                       android:textColor="#FFFFFF"
                       android:fontFamily="sans-serif-light"/>

               </androidx.cardview.widget.CardView>

           </LinearLayout>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginBottom="7dp"
               android:paddingBottom="5dp"
               android:paddingTop="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_margin="10dp">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:textSize="18sp"
                       android:fontFamily="sans-serif-light"
                       android:textColor="@color/black"
                       android:text="Alarm 1"/>
                   <TextView
                       android:id="@+id/morningAlarmButton"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:fontFamily="sans-serif-light"
                       android:textColor="@color/black"
                       android:text="Set time from settings"/>


               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_marginBottom="7dp"
               android:paddingBottom="5dp"
               android:paddingTop="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_margin="10dp">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
